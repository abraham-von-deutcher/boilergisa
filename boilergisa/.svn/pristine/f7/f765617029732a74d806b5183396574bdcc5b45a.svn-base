#bgHeader .settingEngnr{
width: 30px;
height: 30px;
margin: 13px;
padding: 0px;
top: 0;
right: 10px;
position: absolute;
float: right;
cursor: pointer;
}
.main{
padding-top: 56px;
padding-bottom:66px;
}
.main p{
font-size:12px;
}
label{
font-size:11px;
}
.engnrProfil{
width:100%;
height:240px;
outline:none;
}

.inputEngnrInfo{
padding:0 16px;
}
.engnrName p{
font-size:14px;
padding: 6px;
padding-bottom: 0;
font-weight:bolder;
}

.introEngnr .engnrIntro{
text-overflow: ellipsis;
overflow: hidden;
display: -webkit-box;
-webkit-line-clamp: 7;
-webkit-box-orient: vertical;
}
.btn_more{
display:none;
float:right;
padding-right:8px;
color:#33B8FF;
cursor: pointer;	
}
.form-group{
padding:0;
margin:0;
display:flex;
}
.form-group p{
padding:0 16px;
}
.businessTime{
display:flex;
}
.dateInfo{
padding-left: 16px;
}
.timeInfo{
padding-left: 16px;
}
/*----------------REVIEW----------------*/
.gradeInfo{
width:100%;
height:80px;
