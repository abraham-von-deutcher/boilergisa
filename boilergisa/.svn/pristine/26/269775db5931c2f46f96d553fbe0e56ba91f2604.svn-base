body:after{
content: '';
position: absolute;
top: 0;
left: 0;
right: 0;
bottom: 0;
overflow: auto;
background-color: rgba(0,0,0,0.4);
opacity: 0;
visibility: hidden;
transition: 0.4s;
}
body.active:after{
opacity: 1;
visibility: visible;
}
body.active{
position: relative;
left: 0;
overflow: hidden;
}
body.active aside{
margin-left: 0;
}

/* -------------ASIDE(NAVIGATION) ----------- */
aside{
position: fixed;
top: 0;
height: 100vh;
width: 300px;
margin-left: -300px;
transition: 0.4s;
display: flex;
flex-direction: column;
background-color: white;
z-index: 999;
}
#menu header{
width: 100%;
height: 56px;
position: relative;
padding:0;
margin:0;
}
.history-back{
width:30px;
margin:13px 17px;
}
aside .login-area{
width: 100%;
height: 110px;
display: flex;
align-items: center
}
aside .profil{
width: 60px;
height: 60px;
margin: 30px;
border-radius: 50%;
}
.login_setting{
width: 30px;
height: 30px;
float: right;
margin: 16px 30px;
}
.login_setting:hover{
background: #efefef;	
}
aside #nav_menu{
background: #84d2ff;
flex: 3;
font-size: medium;
}
#nav_menu ul{
list-style: none;
top: 0;
padding: 0;
margin: 0;  
}
#nav_menu ul li{
top: 0;
bottom: 0;
height: 8vh;
line-height: 8vh;
border-bottom: 1px solid #4fb6f1;
color: rgba(255,255,255,255);
font-weight:bolder;
padding-left: 13px;
}
#nav_menu ul li:hover{
background: #66bdf0;
}
#nav_menu ul .ctgr{
line-height: 9vh;
padding-left: 13px;
margin: 0;
border: 0;
background-color: #f7f7f7;
color: rgb(168, 168, 168);
}
#nav_menu .label-warning{
padding: 4px 6px;
margin: 20px 10px;
position: absolute;
z-index: 10;
}

/* -------------NEWS FEED ----------- */

.bgstoolbar{
position: relative;
height: 56px;
width: 100%;
border-bottom: 1px solid #c4c4c4;
transition: 0.4s;
display: flex;
padding:0;
margin:0;
}
.bgstoolbar .label-warning{
padding: 4px 6px;
position: absolute;
left: 30px;
top: 30px;
z-index: 10;
}

.bgs_toggle{
width: 30px;
height: 20px;
position: absolute;
top: 15px;
left: 13px;
