.main input:focus, .main textarea:focus , .main select:focus{
	outline: none;
	box-shadow: none;
	border: 1px solid #FF9800;
}
#engnrUpdateBtn{
	width: 100%;	
	background-color: rgba(54, 185, 255, 0.83);
	color: #ffffff;
	font-size: 1em;
	position: fixed;
	bottom: 0;
	right: 0;
	left: 0;
	padding: 16px 0;
	margin: 0;
	z-index:9;
	border:none;
}
.form-group textarea{
	width:100%;
	height:110px;
}
.findAddrs{
	width:100%;
	display:flex;
	flex-direction: row;
}

.findAddrs input{
	margin-left:8px;
}
.findAddrsBtn{
	width:25%;
	font-size: 11px;
	border: 1px solid #757575;
	border-radius:8%;
}
.closeLayer{
	cursor: pointer;
	position: absolute;
	width: 100%;
	height: 50px;
	z-index:1;
	bottom: 0;
	padding: 0;
	margin: 0;
}
.form-inline .form-group{
	display:flex;	
}
.form-inline .form-group label{
	width:20%;
	text-align: center;
	padding:6px;
}
.form-inline .form-group .form-control{
	width: auto;
}

/*-------------- setting-address --------*/
#layer{
	display:none;
	position:fixed;
	overflow:hidden;
	transition: 0.4s;
	z-index:999;
	-webkit-overflow-scrolling:touch;
}
/*-------------- 프로필 사진 업로드--------------*/
.showProfile{
	width:100%;
	height:240px;
	position:relative;
	margin-bottom: 15px;
}
.showProfile .preImg{
	width:100%;
	height:100%;
	z-index: 1;
}
#profileChangeBtn{
	position: absolute;
	bottom:18px;
	right:18px;
	font-size: 12px;
	padding:6px;
	border: 1px solid #757575;
	border-radius:8%;
	float:right;
	color:#ffffff;
	background-color: #33B8FF;
	text-align: center;
	z-index: 99;
}
#profileChangeBtn img{
	width:20px;
	height:20px;
}
.preProfile{
	width:100%;
	height:100%;
	position: absolute;
	top:0;
}
.preProfile img{
	width:100%;
	height:100%;
	z-index: 10;
}